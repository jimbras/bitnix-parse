{
  "name": "bitnix/parse",
  "description": "Bitnix Lexer/Parser",
  "type": "library",
  "license": "AGPL-3.0",
  "authors": [
    { "name": "bitnix", "email": "bitnix@riseup.net" }
  ],
  "require": {
    "php": ">=7.4",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Bitnix\\Parse\\" : "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Bitnix\\Parse\\" : "test/src"
    }
  },
  "scripts": {
    "test": "phpunit --colors=always -c test/phpunit.xml --coverage-html test/out"
  }
}
